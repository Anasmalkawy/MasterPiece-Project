@model List<MasterPiece.Models.User>
@{
    ViewData["Title"] = "إدارة المستخدمين";
    Layout = "_AdminLayout";
}

<div class="admin-users">
    <div class="page-header">
        <h1>إدارة المستخدمين</h1>
    </div>

    <div class="admin-filters">
        <div class="search-box">
            <input type="text" id="userSearch" placeholder="بحث عن المستخدمين...">
            <i class="fas fa-search"></i>
        </div>
        <div class="filter-options">
            <select id="roleFilter">
                <option value="">جميع الأدوار</option>
                <option value="admin">مدير</option>
                <option value="user">مستخدم</option>
            </select>
        </div>
    </div>

    <div class="admin-table-container">
        @if (Model != null && Model.Any())
        {
            <table class="admin-table users-table">
                <thead>
                    <tr>
                        <th>رقم المستخدم</th>
                        <th>الاسم</th>
                        <th>البريد الإلكتروني</th>
                        <th>رقم الهاتف</th>
                        <th>الدور</th>
                        <th>الطلبات</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr data-role="@(user.Role?.ToLower() ?? "user")">
                            <td>#@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>
                            <td>
                                <span class="role-badge role-@(user.Role?.ToLower() ?? "user")">@(user.Role ?? "مستخدم")</span>
                            </td>
                            <td>@user.Orders.Count</td>
                            <td class="actions">
                                <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="action-btn edit-btn">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="action-btn delete-btn" data-toggle="modal" data-target="#deleteUserModal" data-id="@user.Id" data-name="@user.Name" data-orders="@user.Orders.Count">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-users"></i>
                <p>لا يوجد مستخدمين حاليًا</p>
            </div>
        }
    </div>
</div>

<!-- نافذة تأكيد الحذف -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModalLabel">تأكيد الحذف</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من حذف المستخدم: <span id="userName"></span>؟</p>
                <div id="userHasOrders" class="d-none">
                    <p class="text-danger">لديه هذا المستخدم <span id="ordersCount"></span> طلبات. لا يمكن حذف مستخدم لديه طلبات.</p>
                </div>
                <div id="userNoOrders" class="d-none">
                    <p class="text-danger">هذا الإجراء لا يمكن التراجع عنه وسيؤدي إلى حذف جميع بيانات المستخدم.</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">إلغاء</button>
                <form id="deleteUserForm" method="post" action="@Url.Action("DeleteUser", "Admin")">
                    <input type="hidden" id="userId" name="id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" id="confirmUserDelete" class="btn btn-danger">حذف</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تهيئة نافذة الحذف
            $('#deleteUserModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var name = button.data('name');
                var orders = button.data('orders');

                var modal = $(this);
                modal.find('#userName').text(name);
                modal.find('#userId').val(id);
                modal.find('#ordersCount').text(orders);

                if (orders > 0) {
                    $('#userHasOrders').removeClass('d-none');
                    $('#userNoOrders').addClass('d-none');
                    $('#confirmUserDelete').prop('disabled', true);
                } else {
                    $('#userHasOrders').addClass('d-none');
                    $('#userNoOrders').removeClass('d-none');
                    $('#confirmUserDelete').prop('disabled', false);
                }
            });

            // بحث في المستخدمين
            $("#userSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $(".users-table tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // فلترة حسب الدور
            $("#roleFilter").on("change", function() {
                var value = $(this).val().toLowerCase();
                if (value === "") {
                    $(".users-table tbody tr").show();
                } else {
                    $(".users-table tbody tr").hide();
                    $(".users-table tbody tr[data-role='" + value + "']").show();
                }
            });
        });
    </script>
}