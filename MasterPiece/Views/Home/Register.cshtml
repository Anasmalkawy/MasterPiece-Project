<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - لوحة تحكم المدير</title>

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="https://cdn.rtlcss.com/bootstrap/v4.5.3/css/bootstrap.min.css" integrity="sha384-JvExCACAZcHNJEc7156QaHXTnQL3hQBixvj5RV5buE7vgnNEzzskDtx9NQ4p6BJe" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap">

    <!-- Admin Custom CSS -->
    <link rel="stylesheet" href="~/css/admin-style.css" />
</head>
<body>
    <div class="admin-layout">
        <!-- القائمة الجانبية -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <img src="~/img/logo.png" alt="شعار الموقع" class="logo" />
                <h1>متجر ماستر بيس</h1>
            </div>

            <div class="admin-info">
                <img src="~/img/admin-avatar.png" alt="صورة المدير" class="admin-avatar" />
                <div>
                    <h3>@Context.Session.GetString("name")</h3>
                    <p>مدير النظام</p>
                </div>
            </div>

            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a href="@Url.Action("Index", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>لوحة التحكم</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Products", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Products" || ViewContext.RouteData.Values["action"].ToString() == "AddProduct" || ViewContext.RouteData.Values["action"].ToString() == "EditProduct" ? "active" : "")">
                            <i class="fas fa-box"></i>
                            <span>المنتجات</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Categories", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Categories" || ViewContext.RouteData.Values["action"].ToString() == "AddCategory" || ViewContext.RouteData.Values["action"].ToString() == "EditCategory" ? "active" : "")">
                            <i class="fas fa-tag"></i>
                            <span>الفئات</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Orders", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Orders" || ViewContext.RouteData.Values["action"].ToString() == "OrderDetails" ? "active" : "")">
                            <i class="fas fa-shopping-cart"></i>
                            <span>الطلبات</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Users", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Users" || ViewContext.RouteData.Values["action"].ToString() == "EditUser" ? "active" : "")">
                            <i class="fas fa-users"></i>
                            <span>المستخدمين</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("SalesReport", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "SalesReport" ? "active" : "")">
                            <i class="fas fa-chart-bar"></i>
                            <span>التقارير</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="sidebar-footer">
                <a href="@Url.Action("Index", "Home")" target="_blank">
                    <i class="fas fa-globe"></i>
                    <span>زيارة الموقع</span>
                </a>
                <a href="@Url.Action("Logout", "Home")">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>تسجيل الخروج</span>
                </a>
            </div>
        </aside>

        <!-- المحتوى الرئيسي -->
        <main class="admin-main">
            <header class="admin-header">
                <div class="header-search">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="بحث..." />
                </div>

                <div class="header-actions">
                    <div class="notifications">
                        <button class="notification-btn">
                            <i class="fas fa-bell"></i>
                            <span class="badge">3</span>
                        </button>
                        <div class="notification-dropdown">
                            <div class="notification-item">
                                <div class="notification-icon new"><i class="fas fa-shopping-cart"></i></div>
                                <div class="notification-content">
                                    <p>تم استلام طلب جديد</p>
                                    <small>منذ 5 دقائق</small>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon"><i class="fas fa-user"></i></div>
                                <div class="notification-content">
                                    <p>مستخدم جديد قام بالتسجيل</p>
                                    <small>منذ 30 دقيقة</small>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon low"><i class="fas fa-exclamation-triangle"></i></div>
                                <div class="notification-content">
                                    <p>منتج قارب على النفاذ</p>
                                    <small>منذ ساعة</small>
                                </div>
                            </div>
                            <div class="view-all">
                                <a href="#">عرض كل الإشعارات</a>
                            </div>
                        </div>
                    </div>

                    <div class="user-menu">
                        <button class="user-menu-btn">
                            <img src="~/img/admin-avatar.png" alt="صورة المدير" />
                            <span>@Context.Session.GetString("name")</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="user-dropdown">
                            <a href="#"><i class="fas fa-user"></i> الملف الشخصي</a>
                            <a href="#"><i class="fas fa-cog"></i> الإعدادات</a>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("Logout", "Home")"><i class="fas fa-sign-out-alt"></i> تسجيل الخروج</a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="admin-content">
                @RenderBody()
            </div>

            <footer class="admin-footer">
                <p>&copy; @DateTime.Now.Year - متجر ماستر بيس - جميع الحقوق محفوظة</p>
            </footer>
        </main>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>

    <!-- Admin Custom JavaScript -->
    <script src="~/js/admin-script.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>