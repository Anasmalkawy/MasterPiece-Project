}

<!-- ضع الكود داخل الـ body مباشرة من هنا -->
<main>
    <!-- heading -->
    <div class="heading">
        <div class="heading-home">
            <i class='bx bx-home'></i>
            <span>/ تواصل معنا</span>
        </div>
        <div class="heading-home">
            <span>تواصل معنا</span>
        </div>
    </div>

    <!-- contact section -->
    <div class="contact-section">
        <div class="contact-box">
            <!-- box 1 -->
            <div class="box">
                <div class="icon"><i class='bx bxl-gmail'></i></div>
                <span class="box-title">راسلنا بالبريد الإلكتروني</span>
                <div class="contact-info">
                    <div class="icon-contant">
                        <i class='bx bxl-gmail'></i>
                        <p class="info-contant">anas.malkawy1999@gmail.com</p>
                    </div>
                </div>
            </div>

            <!-- box 2 -->
            <div class="box">
                <div class="icon"><i class='bx bxs-phone-call'></i></div>
                <span class="box-title">اتصل بنا</span>
                <div class="contact-info">
                    <div class="icon-contant">
                        <i class='bx bxs-phone-call'></i>
                        <p>00962 775 994747</p>
                    </div>
                </div>
            </div>

            <!-- box 3 -->
            <div class="box">
                <div class="icon"><i class='bx bxs-map-pin'></i></div>
                <span class="box-title">زيارة مكتبنا</span>
                <div class="contact-info">
                    <div class="icon-contant">
                        <i class='bx bxs-map-pin'></i>
                        <p class="info-contant">irbid</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- contact form -->
    <div class="contact-Send">
        <div class="container-send">
            <form action="#" class="contact-form">
                <h2 class="form-title">أرسل رسالتك</h2>
                <input class="full-name-input" type="text" placeholder="الاسم كامل" />
                <div class="contact-details">
                    <input class="mobile-input" type="tel" placeholder="الهاتف المحمول" />
                    <input class="email-input" type="email" placeholder="البريد الإلكتروني" />
                </div>
                <textarea class="message-input" placeholder="نص الرسالة"></textarea>
                <button class="send-button"><a href="#">ارسال رسالتك</a></button>
            </form>
            <iframe title="فلسطين" width="600" height="397" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d1878.8676861014994!2d35.850001509766955!3d32.551698283995734!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sar!2sjo!4v1744638619672!5m2!1sar!2sjo" scrolling="no"></iframe>
        </div>
