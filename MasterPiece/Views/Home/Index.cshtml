@model List<MasterPiece.Models.Product>
@{
    ViewData["Title"] = "الرئيسية";
}

<!-- قسم الهيرو المحسن -->
<div class="hero-container" dir="rtl">
    <img src="~/img/Screenshot 2025-04-09 201745.png" class="hero-image" alt="MasterPiece - متجرك الإلكتروني المتكامل" />
    <div class="hero-overlay">
        <h1 class="hero-title">متجر ماستر بيس الإلكتروني</h1>
        <p class="hero-subtitle">أحدث المنتجات التقنية بأفضل الأسعار</p>
        <a href="#latest-products" class="hero-button">تسوق الآن</a>
    </div>
</div>

<!-- شريط الإحصائيات -->
<div class="stats-bar py-4 bg-light mb-5" dir="rtl">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 col-6 mb-3 mb-md-0">
                <div class="stat-item">
                    <i class='bx bxs-truck text-primary mb-2 display-6'></i>
                    <h5 class="fw-bold">شحن سريع</h5>
                    <p class="text-muted small mb-0">لجميع مناطق المملكة</p>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3 mb-md-0">
                <div class="stat-item">
                    <i class='bx bxs-shield-alt-2 text-primary mb-2 display-6'></i>
                    <h5 class="fw-bold">ضمان الجودة</h5>
                    <p class="text-muted small mb-0">منتجات أصلية 100%</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <i class='bx bxs-credit-card text-primary mb-2 display-6'></i>
                    <h5 class="fw-bold">دفع آمن</h5>
                    <p class="text-muted small mb-0">خيارات دفع متعددة</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <i class='bx bxs-phone text-primary mb-2 display-6'></i>
                    <h5 class="fw-bold">دعم فني</h5>
                    <p class="text-muted small mb-0">متاح على مدار اليوم</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ✅ قسم اللابتوبات -->
<section id="latest-products" class="product-section mb-5 fade-in-section" dir="rtl">
    <div class="container">
        <div class="section-title text-end mb-4">
            <h3 class="fw-bold border-end pe-3 border-4 border-primary d-inline-block">لابتوبات</h3>
            <span class="float-start">
                <a href="#" class="btn btn-outline-primary rounded-pill">مشاهدة الكل <i class='bx bx-left-arrow-alt'></i></a>
            </span>
        </div>
        <div class="row g-4">
            @foreach (var product in Model.Where(p => p.CategoryId == 1))
            {
                <div class="col-md-6 col-lg-4 col-xl-3 product-item" style="--delay: @((product.Id % 4) * 100)ms">
                    <div class="product-card border-0 h-100 shadow-sm">
                        <div class="product-img-container">
                            <img src="~/img/@product.Image" class="card-img-top" alt="@product.Name" />
                            @if (product.Id % 4 == 0)
                            {
                                <span class="discount-badge">خصم @(15 + (product.Id % 10))%</span>
                            }
                        </div>
                        <div class="card-body text-end">
                            <h5 class="product-name">@product.Name</h5>
                            <p class="product-price mb-3">$@product.Price</p>
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-controller="product" asp-action="addCart" asp-route-id="@product.Id" class="btn icon-btn add-to-cart-btn" title="أضف للسلة">
                                    <i class='bx bxs-shopping-bags'></i>
                                </a>
                                <a asp-controller="product" asp-action="singleproduct" asp-route-id="@product.Id" class="btn icon-btn" title="عرض التفاصيل">
                                    <i class='bx bx-show-alt'></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- قسم الترويج (بديل للقسم الذي كان يتم إضافته بالجافاسكريبت) -->
<section class="promo-section py-5 mb-5 fade-in-section" dir="rtl">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6 promo-item">
                <div class="promo-card bg-primary text-white position-relative overflow-hidden rounded-3">
                    <div class="promo-content p-4">
                        <h3 class="fw-bold mb-2">أحدث اللابتوبات</h3>
                        <p class="mb-3">خصومات تصل إلى 25%</p>
                        <a href="#" class="btn btn-outline-light rounded-pill">تسوق الآن</a>
                    </div>
                    <div class="promo-image">
                    </div>
                </div>
            </div>
            <div class="col-md-6 promo-item">
                <div class="promo-card bg-success text-white position-relative overflow-hidden rounded-3">
                    <div class="promo-content p-4">
                        <h3 class="fw-bold mb-2">تخفيضات الموسم</h3>
                        <p class="mb-3">على جميع الإكسسوارات</p>
                        <a href="#" class="btn btn-outline-light rounded-pill">تسوق الآن</a>
                    </div>
                    <div class="promo-image">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

