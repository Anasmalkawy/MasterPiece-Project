@model MasterPiece.Models.User

@{
    ViewData["Title"] = "تغيير كلمة المرور";
}

<link rel="stylesheet" href="~/css/profile-shared.css" />
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<main>
    <div class="dashboard-wrapper">
        <aside class="sidebar-profile">
            <div class="sidebar-header">
                <h2 class="sidebar-title">حسابي</h2>
            </div>
            <div class="sidebar-links">
                <div class="sidebar-link">
                    <i class='bx bx-user'></i>
                    <a asp-action="profile">لوحة التحكم</a>
                </div>
                <div class="sidebar-link">
                    <i class='bx bxs-truck'></i>
                    <a asp-action="Orders">طلباتي</a>
                </div>
                <div class="sidebar-link active">
                    <i class='bx bxs-lock-alt'></i>
                    <a asp-action="ChangePassword">تغيير كلمة المرور</a>
                </div>
                <div class="sidebar-link">
                    <i class='bx bx-log-out'></i>
                    <a asp-controller="profile" asp-action="logout">خروج</a>
                </div>
            </div>
        </aside>

        <div class="profile-content">
            <h3 class="profile-title">تغيير كلمة المرور</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    <i class='bx bx-error-circle'></i> @ViewBag.Error
                </div>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    <i class='bx bx-check-circle'></i> @ViewBag.Message
                </div>
            }

            <form asp-action="ChangePassword" method="post" class="user-info">
                <div class="user-row">
                    <label class="user-label" for="Password">
                        <i class='bx bx-lock'></i> كلمة المرور الحالية:
                    </label>
                    <input name="Password" class="form-control" type="password" required />
                    <span for="Password" class="text-danger"></span>
                </div>
                <div class="user-row">
                    <label class="user-label" for="NewPassword">
                        <i class='bx bx-lock-open'></i> كلمة المرور الجديدة:
                    </label>
                    <input name="NewPassword" class="form-control" type="password" required />
                    <span for="NewPassword" class="text-danger"></span>
                    <div id="password-strength" class="password-strength"></div>
                </div>
                <div class="user-row">
                    <label class="user-label" for="ConfirmPassword">
                        <i class='bx bx-check-shield'></i> تأكيد كلمة المرور:
                    </label>
                    <input name="ConfirmPassword" class="form-control" type="password" required />
                    <span for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="password-tips">
                    <h5 style="margin-bottom: 0.5rem; color: var(--secondary-color);">
                        <i class='bx bx-info-circle'></i> نصائح لكلمة مرور قوية
                    </h5>
                    <ul style="padding-right: 1.5rem; color: var(--secondary-color); font-size: 0.9rem;">
                        <li>استخدم 8 أحرف على الأقل</li>
                        <li>استخدم حرف كبير وحرف صغير على الأقل</li>
                        <li>استخدم رقم واحد على الأقل</li>
                        <li>استخدم رمز خاص واحد على الأقل (!#$%^&*)</li>
                    </ul>
                </div>

                <button type="submit" class="btn-edit-profile" style="margin-top: 1.5rem;">
                    <i class='bx bx-save'></i> تحديث كلمة المرور
                </button>
            </form>
        </div>
    </div>

    <div class="clearfix"></div>
</main>

<style>
    .password-strength {
        margin-top: 0.5rem;
        padding: 0.3rem 0.5rem;
        border-radius: 4px;
        font-size: 0.85rem;
        display: none;
    }

    .password-strength-weak {
        background-color: rgba(245, 108, 108, 0.15);
        color: var(--danger-color);
    }

    .password-strength-medium {
        background-color: rgba(255, 186, 0, 0.15);
        color: var(--warning-color);
    }

    .password-strength-good {
        background-color: rgba(0, 153, 255, 0.15);
        color: var(--info-color);
    }

    .password-strength-strong {
        background-color: rgba(19, 206, 102, 0.15);
        color: var(--success-color);
    }

    .password-tips {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1.5rem;
    }
</style>

<script src="~/js/profile-shared.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}